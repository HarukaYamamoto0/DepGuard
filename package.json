{
  "name": "depguard",
  "displayName": "DepGuard",
  "description": "Automatic dependency watchdog: detects outdated npm packages, vulnerabilities, and more.",
  "version": "1.0.0",
  "publisher": "harukadev",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:package.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "depguard.scanCurrentFile",
        "title": "DepGuard: Scan current package.json"
      }
    ]
  },
  "scripts": {
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  },
  "bugs": {
    "url": "https://github.com/HarukaYamamoto0/DepGuard/issues",
    "email": "harukayamamotodev@gmail.com"
  },
  "license": "MIT",
  "author": "HarukaYamamoto0 <harukayamamotodev@gmail.com> (https://harukadev.com)",
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/HarukaYamamoto0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HarukaYamamoto0/DepGuard.git"
  }
}
