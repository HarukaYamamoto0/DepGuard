{
  "name": "depguard",
  "displayName": "DepGuard",
  "description": "Automatic dependency watchdog: scan package.json for outdated deps, vulnerabilities and suggested upgrades.",
  "version": "1.0.1",
  "publisher": "harukadev",
  "icon": "images/logo.png",
  "preview": true,
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "workspaceContains:package.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "depguard.scanCurrentFile",
        "title": "DepGuard: Scan current package.json"
      }
    ]
  },
  "scripts": {
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "bunx eslint . --ext .ts --cache --cache-strategy content",
    "lint:fix": "bunx eslint . --ext .ts --fix --cache --cache-strategy content",
    "format": "bunx prettier --check . --cache --cache-strategy content",
    "format:fix": "bunx prettier --write . --cache --cache-strategy content"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@types/vscode": "1.106.1",
    "@types/mocha": "10.0.10",
    "@types/node": "24.10.1",
    "typescript-eslint": "8.47.0",
    "eslint": "9.39.1",
    "typescript": "5.9.3",
    "@vscode/test-cli": "0.0.12",
    "@vscode/test-electron": "2.5.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "prettier": "3.6.2"
  },
  "bugs": {
    "url": "https://github.com/HarukaYamamoto0/DepGuard/issues",
    "email": "harukayamamotodev@gmail.com"
  },
  "license": "MIT",
  "author": "HarukaYamamoto0 <harukayamamotodev@gmail.com> (https://harukadev.com)",
  "funding": {
    "type": "individual",
    "url": "https://github.com/sponsors/HarukaYamamoto0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/HarukaYamamoto0/DepGuard.git"
  },
  "keywords": [
    "npm",
    "dependencies",
    "vulnerabilities",
    "packages",
    "outdated",
    "audit",
    "security",
    "watchdog"
  ]
}
